<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_graph"
    app:startDestination="@id/section">

    <include app:graph="@navigation/node_graph" />

    <fragment
        android:id="@+id/section"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.section.RoadmapSectionFragment"
        android:label=""
        tools:layout="@layout/roadmap_section_fragment">

        <argument
            android:name="sections"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />

        <action
            android:id="@+id/navigate_section_to_node"
            app:destination="@id/node_graph">

            <argument
                android:name="nodes"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />
        </action>
    </fragment>
</navigation>