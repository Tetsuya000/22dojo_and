<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <include app:graph="@navigation/section_graph" />

    <fragment
        android:id="@+id/home"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/home_fragment" />

    <fragment
        android:id="@+id/roadmap"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.path.RoadmapPathFragment"
        android:label=""
        tools:layout="@layout/roadmap_path_fragment">

        <action
            android:id="@+id/navigate_path_to_section"
            app:destination="@id/section_graph">

            <argument
                android:name="sections"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/setting"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.setting.SettingFragment"
        android:label=""
        tools:layout="@layout/setting_fragment" />
</navigation>