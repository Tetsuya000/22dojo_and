<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roadmap_tab_graph"
    app:startDestination="@id/path">

    <fragment
        android:id="@+id/path"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.path.RoadmapPathFragment"
        android:label=""
        tools:layout="@layout/roadmap_path_fragment">

        <action
            android:id="@+id/navigate_path_to_section"
            app:destination="@id/section">

            <argument
                android:name="sections"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/section"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.section.RoadmapSectionFragment"
        android:label=""
        tools:layout="@layout/roadmap_section_fragment">

        <argument
            android:name="sections"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />

        <action
            android:id="@+id/navigate_section_to_node"
            app:destination="@id/node">

            <argument
                android:name="nodes"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/node"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.node.RoadmapNodeFragment"
        android:label=""
        tools:layout="@layout/roadmap_node_fragment">

        <argument
            android:name="nodes"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]"
            app:nullable="true" />

        <action
            android:id="@+id/navigate_node_to_childNodes"
            app:destination="@id/node" />

        <action
            android:id="@+id/navigate_childNodes_to_edit"
            app:destination="@id/node_edit" />

        <action
            android:id="@+id/navigate_childNodes_to_detail"
            app:destination="@id/node_detail" />
    </fragment>

    <fragment
        android:id="@+id/node_edit"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.edit.NodeEditFragment"
        android:label=""
        tools:layout="@layout/node_edit_fragment" >

        <argument
            android:name="node"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node"/>
    </fragment>

    <fragment
        android:id="@+id/node_detail"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.detail.NodeDetailFragment"
        android:label=""
        tools:layout="@layout/node_detail_fragment" >

        <argument
            android:name="node"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node"/>

        <action
            android:id="@+id/navigate_detail_to_edit"
            app:destination="@id/node_edit" />
    </fragment>
</navigation>