<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roadmap_tab_graph"
    app:startDestination="@id/path">

    <fragment
        android:id="@+id/path"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.path.RoadmapPathFragment"
        android:label="Roadmap"
        tools:layout="@layout/roadmap_path_fragment">

        <action
            android:id="@+id/navigate_path_to_section"
            app:destination="@id/section"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit">

            <argument
                android:name="sections"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/section"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.section.RoadmapSectionFragment"
        android:label="Section"
        tools:layout="@layout/roadmap_section_fragment">

        <argument
            android:name="sections"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />

        <action
            android:id="@+id/navigate_section_to_node"
            app:destination="@id/node"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit">

            <argument
                android:name="nodes"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />

            <argument
                android:name="label"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/node"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.node.RoadmapNodeFragment"
        android:label="{label}"
        tools:layout="@layout/roadmap_node_fragment">

        <argument
            android:name="nodes"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />

        <argument
            android:name="label"
            app:argType="string" />

        <action
            android:id="@+id/navigate_node_to_childNodes"
            app:destination="@id/node"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit"/>

        <action
            android:id="@+id/navigate_childNodes_to_edit"
            app:destination="@id/node_edit"
            app:enterAnim="@anim/nav_up_enter"
            app:exitAnim="@anim/nav_up_exit"
            app:popEnterAnim="@anim/nav_up_pop_enter"
            app:popExitAnim="@anim/nav_up_pop_exit"/>

        <action
            android:id="@+id/navigate_childNodes_to_detail"
            app:destination="@id/node_detail"
            app:enterAnim="@anim/nav_up_enter"
            app:exitAnim="@anim/nav_up_exit"
            app:popEnterAnim="@anim/nav_up_pop_enter"
            app:popExitAnim="@anim/nav_up_pop_exit"/>
    </fragment>

    <fragment
        android:id="@+id/node_edit"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.memo.edit.MemoEditFragment"
        android:label=""
        tools:layout="@layout/memo_edit_fragment" >

        <argument
            android:name="node"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node"/>
    </fragment>

    <fragment
        android:id="@+id/node_detail"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.memo.detail.MemoDetailFragment"
        android:label=""
        tools:layout="@layout/memo_detail_fragment" >

        <argument
            android:name="node"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node"/>

        <action
            android:id="@+id/navigate_detail_to_edit"
            app:destination="@id/node_edit" />
    </fragment>
</navigation>