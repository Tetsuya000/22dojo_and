<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roadmap_tab_graph"
    app:startDestination="@id/path">

    <include app:graph="@navigation/detail_memo_graph" />

    <fragment
        android:id="@+id/path"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.path.RoadmapPathFragment"
        android:label="Roadmap"
        tools:layout="@layout/roadmap_path_fragment">

        <action
            android:id="@+id/navigate_path_to_section"
            app:destination="@id/section"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit">

            <argument
                android:name="sections"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />
        </action>

        <action
            android:id="@+id/navigate_path_to_search"
            app:destination="@id/search" />
    </fragment>

    <fragment
        android:id="@+id/section"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.section.RoadmapSectionFragment"
        android:label="Section"
        tools:layout="@layout/roadmap_section_fragment">

        <argument
            android:name="sections"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Section[]" />

        <action
            android:id="@+id/navigate_section_to_node"
            app:destination="@id/node"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit">

            <argument
                android:name="nodes"
                app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />

            <argument
                android:name="label"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/node"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.rodemap.node.RoadmapNodeFragment"
        android:label="{label}"
        tools:layout="@layout/roadmap_node_fragment">

        <argument
            android:name="nodes"
            app:argType="jp.gr.java.conf.tmproject.dojoandroid2022.domain.model.Node[]" />

        <argument
            android:name="label"
            app:argType="string" />

        <action
            android:id="@+id/navigate_node_to_childNodes"
            app:destination="@id/node"
            app:enterAnim="@anim/nav_slide_enter"
            app:exitAnim="@anim/nav_slide_exit"
            app:popEnterAnim="@anim/nav_slide_pop_enter"
            app:popExitAnim="@anim/nav_slide_pop_exit" />

        <action
            android:id="@+id/navigate_childNodes_to_detail_memo"
            app:destination="@id/detail_memo_graph"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" >

            <argument
                android:name="nodeId"
                app:argType="integer" />

            <argument
                android:name="nodeTitle"
                app:argType="string" />

            <argument
                android:name="memo"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/search"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.search.SearchFragment"
        android:label=""
        tools:layout="@layout/search_fragment" >

        <action
            android:id="@+id/navigate_search_to_web_view"
            app:destination="@id/web_view" />
    </fragment>

    <fragment
        android:id="@+id/web_view"
        android:name="jp.gr.java.conf.tmproject.dojoandroid2022.presentation.ui.web.WebViewFragment"
        android:label=""
        tools:layout="@layout/web_view_fragment" >

        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
</navigation>