<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isMaster"
            type="Boolean" />

        <variable
            name="isEndNode"
            type="Boolean" />

        <variable
            name="title"
            type="String" />

        <variable
            name="onClickListener"
            type="View.OnClickListener" />

        <variable
            name="onLongClickListener"
            type="View.OnLongClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@{isMaster? @color/node_is_master:@color/node_is_not_master}"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setOnClickListener="@{onClickListener}"
            app:setOnLongClickListener="@{onLongClickListener}"
            tools:cardBackgroundColor = "@color/node_is_not_master">


            <TextView
                android:id="@+id/text_path"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{title}"
                android:textColor="@color/roadmap_text"
                android:textSize="17sp"
                tools:text="Title" />

            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="10dp"
                android:tint="@android:color/darker_gray"
                android:visibility="@{isEndNode? View.INVISIBLE :View.VISIBLE}"
                app:srcCompat="@drawable/ic_arrow_right" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>